<div class="navbar navbar-default navbar-static-top blue-background white">
  <%= link_to "Group Transaction", root_path, class: "navbar-brand white" %>
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <% if logged_in? %>
        <ul class="nav navbar-nav col-md-6">
          <li class="white"><%= link_to "My Expenses", expenses_path, class: "white"%></li>
          <li><%= link_to "My External expenses", external_path, class: "white"%></li>
          <li><%= link_to "My Groups", groups_path, class: "white"%></li>
        </ul>
        <ul class="nav navbar-right col-md-4">
          <li class="col-md-8 user-name text-right">
            <i class="fa fa-user"></i>
            <%= @current_user.username.present? && @current_user.username %>
          </li>
          <li class="col-md-4 logout">
            <%= link_to("Log Out", "/logout",
                                class: "btn btn-xs btn-danger") %>
          </li>
        </ul>
      <% else %>
        <ul class="nav navbar-right col-md-4">
          <li class="col-md-4 my-3">
            <%= link_to("Sign Up", "/signup",
                                class: "btn btn-success") %>
          </li>
          <li class="col-md-4">
            <%= link_to("Log In", "/login",
                                class: "btn btn-success") %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
